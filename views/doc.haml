- content_for :head do
  %link{:rel => 'stylesheet', :href => '/stylesheets/doc.css', :type => 'text/css'}
  %script{:src => '/javascripts/jquery.autogrow.js', :type => 'text/javascript'}
  %script{:src => '/javascripts/doc.js', :type => 'text/javascript'}
#content
  %h1= @document.title
  %textarea{:spellcheck => "false"}= @document.versions.last.text
#url
  %p.label Document link
  %p.value= @document.short_url || request.url
#stats
  #wordcount
    %p.label Words
    %p.value 0
  #charcount
    %p.label Characters
    %p.value 0
